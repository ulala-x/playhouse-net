{
  "name": "@playhouse/connector",
  "version": "0.1.0",
  "description": "PlayHouse real-time game server connector for JavaScript/TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "extensions/json",
    "extensions/msgpack",
    "extensions/proto"
  ],
  "scripts": {
    "build": "tsc && npm run build --workspaces --if-present",
    "dev": "tsc -w",
    "test": "vitest run && npm test --workspaces --if-present",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "clean": "rm -rf dist && npm run clean --workspaces --if-present"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "peerDependencies": {
    "protobufjs": "^7.0.0"
  },
  "peerDependenciesMeta": {
    "protobufjs": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "playhouse",
    "game-server",
    "websocket",
    "real-time",
    "connector"
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ulalax/playhouse.git"
  }
}
