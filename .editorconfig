# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{cs,csx}]
indent_size = 4

[*.{cpp,hpp,c,h}]
indent_size = 4

[*.java]
indent_size = 4

[*.proto]
indent_size = 2

[Makefile]
indent_style = tab
