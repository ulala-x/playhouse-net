<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>PlayHouse.Tests.Performance</RootNamespace>
    <StartupObject>PlayHouse.Tests.Performance.BenchmarkProgram</StartupObject>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="BenchmarkDotNet" Version="0.14.0" />
    <PackageReference Include="Google.Protobuf" Version="3.28.3" />
    <PackageReference Include="Grpc.Tools" Version="2.68.1" PrivateAssets="All" />
    <!-- xUnit packages are inherited from Directory.Build.props -->
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\PlayHouse\PlayHouse.csproj" />
    <ProjectReference Include="..\..\connector\PlayHouse.Connector\PlayHouse.Connector.csproj" />
  </ItemGroup>

  <!-- Integration 프로젝트의 Infrastructure 파일 참조 -->
  <ItemGroup>
    <Compile Include="..\PlayHouse.Tests.Integration\Infrastructure\TestActorImpl.cs" Link="Infrastructure\Integration\TestActorImpl.cs" />
    <Compile Include="..\PlayHouse.Tests.Integration\Infrastructure\TestStageImpl.cs" Link="Infrastructure\Integration\TestStageImpl.cs" />
    <Compile Include="..\PlayHouse.Tests.Integration\Infrastructure\TestSystemController.cs" Link="Infrastructure\Integration\TestSystemController.cs" />
    <Compile Include="..\PlayHouse.Tests.Integration\Infrastructure\TestApiController.cs" Link="Infrastructure\Integration\TestApiController.cs" />
  </ItemGroup>

  <!-- Integration Proto 파일 참조 -->
  <ItemGroup>
    <Protobuf Include="..\PlayHouse.Tests.Integration\Proto\*.proto" GrpcServices="None" Link="Proto\%(Filename)%(Extension)" />
  </ItemGroup>

</Project>
